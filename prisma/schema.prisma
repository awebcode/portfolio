// schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Make sure to set your database URL in your .env file
}

generator client {
  provider = "prisma-client-js"
}

// Define the Status enum
enum Status {
  Active
  Pending
  Completed
  Disabled
}

model Project {
  id          String   @id @default(uuid()) // Change to String and use uuid for auto-generated IDs
  title       String
  href        String
  dates       String
  status      Status   @default(Active) // Use the Status enum and set default value
  description String
  technologies String[] // Array of strings to store technologies
  links       Link[]    @relation("ProjectLinks")
  image       String?
  video       String?
}

model Link {
  id        String   @id @default(uuid()) // Change to String and use uuid for auto-generated IDs
  type      String
  href      String
  icon      String  // Assuming icon is stored as a string (could be a URL or a path)
  projectId String  // Foreign key to the Project model (change to String)
  project   Project  @relation("ProjectLinks", fields: [projectId], references: [id])
}
